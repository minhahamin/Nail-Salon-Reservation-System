// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id            String   @id @default(cuid())
  designerId    String
  startISO      String
  endISO        String
  serviceIds    String   // JSON stringified array
  customerName  String
  customerPhone String
  agreedTerms   Boolean  @default(false)
  agreedPrivacy Boolean  @default(false)
  reminderOptIn Boolean  @default(false)
  createdAt     DateTime @default(now())
}

model Block {
  id         String   @id @default(cuid())
  designerId String
  startISO   String
  endISO     String
  reason     String?
  createdAt  DateTime @default(now())
}

model Designer {
  id                   String   @id @default(cuid())
  name                 String
  imageUrl             String?  // 디자이너 프로필 이미지 URL
  specialties          String   // JSON stringified array
  workHours            String   // JSON stringified { weekday: number[], start: string, end: string }
  holidays             String?  // JSON stringified array
  breaks               String?  // JSON stringified array
  recurringBreaks      String?  // JSON stringified array
  defaultBlocks        String?  // JSON stringified array
  specialHours         String?  // JSON stringified object
  dailyMaxAppointments Int?
  dailyMaxMinutes      Int?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}
